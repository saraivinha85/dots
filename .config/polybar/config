[colors]
black  = ${xrdb:color0}
red    = ${xrdb:color1}
yellow = ${xrdb:color4}
blue   = ${xrdb:color2}
white  = ${xrdb:color15}

[dims]
padding = 1

[bar/top]
width    = 416
height   = 26
offset-x = 592
offset-y = 4


radius            = 5
monitor           = LVDS1
override-redirect = false

font-0 = Lemon:pixelsize=8;1
font-1 = FontAwesome:pixelsize=8;1
font-2 = Siji:pixelsize=7;2
font-3 = unifont:pixelsize=8
font-4 = Iosevka Medium:size=7;1

background = ${colors.black}
foreground = ${colors.red}

modules-left   = bspwm cover
modules-center = date
modules-right  = volume battery

fixed-center  = true
wm-restack    = bspwm
tray-position = right
tray-maxsize  = 20

; bspwm
[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-focused            = %name%
label-focused-background = ${colors.black}
label-focused-foreground = ${colors.white}
label-focused-padding    = 1

label-urgent = %name%
label-urgent-background = ${colors.blue}
label-urgent-foreground = ${colors.black}
label-urgent-padding = 1

label-empty            = %name%
label-empty-background = ${colors.black}
label-empty-foreground = ${colors.blue}
label-empty-padding    = 1

label-occupied            = %name%
label-occupied-background = ${colors.black}
label-occupied-foreground = ${colors.white}
label-occupied-padding    = 1

format-padding = 1

; Battery
[module/battery]
type    = internal/battery
battery = BAT0
adapter = ACAD
full-at = 95

format-padding = 1

format-charging            = <label-charging>
format-charging-foreground = ${colors.yellow}
format-charging-padding    = ${dims.padding}

format-discharging            = <ramp-capacity> <label-discharging>
format-discharging-padding    = ${dims.padding}

format-full            = <label-full>
format-full-background = ${colors.red}
format-full-foreground = ${colors.white}
format-full-padding    = ${dims.padding}

label-charging    = Charging: %percentage%%
label-discharging = "%percentage%% "
label-full        = Full Capacity

label-discharging-foreground = ${colors.white}

ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-foreground = ${colors.red}

; Date
[module/date]
type = internal/date
interval = 1.0

date = "%Y-%M-%d"

time-alt = %a %d %b
time     = %a %H:%M 

label             = %time%
format            = "<label>"
format-foreground = ${colors.white}
format-padding    = 2

; Volume
[module/volume]
type = internal/volume

format-volume = <ramp-volume><label-volume>
label-volume = "%percentage%% "
label-volume-foreground = ${colors.white}
label-volume-padding = ${dims.padding}

ramp-headphone-0 = " "
ramp-headphone-1 = " "

ramp-volume-0 = " "
ramp-volume-1 = " " 
ramp-volume-2 = " " 
ramp-volume-foreground = ${colors.red}

format-muted = <label-muted>
label-muted =  muted
label-muted-foreground = ${colors.red}
label-muted-background = ${colors.black}
label-muted-padding = ${dims.padding}

;cover
[module/cover]
type               = custom/text
format             = <label>
content            = 
content-foreground = ${colors.red}
content-padding    = 1
click-left         = ~/bin/popup/cover.sh
click-middle       = ~/bin/cpupower
click-right        = ~/bin/notify.sh



[global/wm]
margin-top    = 1
margin-bottom = 1

